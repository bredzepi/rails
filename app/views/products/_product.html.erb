<div class="col-sm-2 col-md-4">
  <% if product.image_url != nil %>
  <%= image_tag(product.image_url, class:"img-responsive") %>
  <% end %>
  <a href="#"><h1><%= product.name %></h1></a>
  <p><h4>Description</h4><%= product.description %></p>
  <p><h4>Colour</h4><%= product.colour %></p>
  <strong><h4>Price</h4><%= product.price %></strong>
  <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div><!-- /col -->
